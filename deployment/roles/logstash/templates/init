# {{ ansible_managed }}
#
# logstash
#

description "logstash"

start on virtual-filesystems
stop on runlevel [06]

respawn
respawn limit 5 30
limit nofile 65550 65550

env JAVA_OPTS='-Xms256m -Xmx256m'
chdir /var/lib/logstash
console log

script
  exec java $JAVA_OPTS -jar ${logstash.dir}/${logstash.jar} agent -f /etc/logstash/logstash.conf --log /var/log/logstash.log
end script

